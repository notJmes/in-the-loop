<style>

    h1,h2,h4 {
        font-family: "Yeseva One", serif;
        font-weight: 400;
        font-style: normal;
    }

    h1{
        text-align: center;
        font-size: 4em;
        letter-spacing: 5px;
    }

    h2{
        text-align: center;
        font-size: 2em;
    }

    img{
        max-width:450px;
        max-height:450px;
    }

</style>

<body>
    

    <div class="container mt-2">
        <header>
            <h1>In the Loop</h1>
    
            <h2>Issue <%= issue %></h2>
        </header>
  
        <hr>

        <% for (var qn in qns) { %>
            <h4><%= qns[qn] %></h4>
            
            <% for (var user in users) { %>
                <b><%= user %></b>
                <p><%= users[user]['qn'+qn.toString()] %></p>
            <% } %>
            <br><hr>
        <% } %>

        <h4>ðŸ“· Photo Wall</h4>
        <% for (var img in img_ls) { %>
            <b><%= img %></b><br>
            <i><%= users[img]['qnCAPTION'] %></i>
            <br>
            <img src="/answers/<%= group %>/images/<%= img_ls[img] %>" alt="">
            <br><br><hr>
            
        <% } %>

      </div>
</body>
